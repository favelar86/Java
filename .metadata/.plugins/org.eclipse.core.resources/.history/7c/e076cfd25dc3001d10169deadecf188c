//				filme.setTitulo(titulo.substring(0, titulo.length()-1));
//			}
			
//			if(fi.substring(1,5).equals("image")) {
//				String urlImagem = fi.substring(9);
//				filme.setUrl(urlImagem.substring(0, urlImagem.length()-1));
//			}
//			
//			if(fi.substring(1,10).equals("imDbRating")) {
//				String nota = fi.substring(14);
//				filme.setNota(Double.parseDouble((nota.substring(0, nota.length()-1))));
//			}
